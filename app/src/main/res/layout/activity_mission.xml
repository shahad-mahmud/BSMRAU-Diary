<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mission">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Vission"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"/>

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="80dp"
                android:text="Fostering Quality teaching and research that develop highly skilled and educated people necessary to advancing the well-being of the nation in general and farming communities in particular."/>

            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="150dp"
                android:text="Mission"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"/>
            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="200dp"
                android:text="Contributing to society through the pursuit of agricultural education, research and innovation for sustainable development."/>

            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="240dp"
                android:text="Goal"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="290dp"
                android:text="Enhancing the growth and Development of the farm economy in Bangladesh by providing intellectual leadership and producing quality graduates in different fields of agriculture."/>

            <TextView
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="350dp"
                android:text="Objective"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="410dp"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="@string/objectives"/>










        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>